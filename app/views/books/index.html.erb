<h1>Books</h1>


<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.user.name %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.content %></td>
    </tr>
    <% end %>
  </tbody>
</table>
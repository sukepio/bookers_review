
<div class="container">
  <div class="row">
    <h1>Books</h1>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Content</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.user.name %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.content %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>
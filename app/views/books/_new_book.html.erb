<div class="new-book mt-5">
  <h1>新規投稿</h1>
  <%= form_with model: book, local: true do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class:'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, class:'form-control' %>
    </div>
    <%= f.submit '送信' %>
  <% end %>
</div>
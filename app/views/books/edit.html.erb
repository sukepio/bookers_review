<div class="container">
  <%= render 'layouts/error_messages', obj: @book %>
  <div class="row">
    <div class="col-6">
      <h1>Editting</h1>
      <div class="form">
        <%= form_with model: @book, local: true do |f| %>
          <%= f.label :title %>
          <%= f.text_field :title, class:'form-control' %>
          <%= f.label :content %>
          <%= f.text_area :content, class:'form-control' %>
          <%= f.submit '送信' %>
        <% end %>
      </div>
      
    </div>
  </div>
</div>
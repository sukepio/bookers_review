<div class="container">
  <div class="row">
    <div class="col-6">
    <h1>Book</h1>
    
    <table class="table">
      <tbody>
        <tr id="book_<%= @book.id %>">
          <td><%= @book.user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.content %></td>
          <td class="like-btn">
            <%= render 'likes/like-btn', book: @book %>
          </td>
          <% if current_user == @book.user %>
          <td><%= link_to '編集する', edit_book_path(@book), class:'btn btn-success' %></td>
          <td><%= link_to '削除する', book_path(@book), method: :delete, class:'btn btn-danger' %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
    
    </div>
    
    <div class="col-6">
      <div class="comments">
        <h2>コメント</h2>
        <table class="table">
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
            <tr>
              <td><%= book_comment.user.name %></td>
              <td><%= book_comment.comment %></td>
              <% if current_user == book_comment.user %>
              <td><%= link_to '削除する', book_book_comment_path(book_comment.book, book_comment), method: :delete, class:'btn btn-danger' %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="new_comment">
        <%= form_with model:[@book, @book_comment], local: true do |f| %>
          <%= f.text_area :comment, class:'form-control' %>
          <%= f.submit '送信', class:'btn btn-info' %>
        <% end %>
      </div>
    </div>
    
      
  </div>
</div>




<table class="table">
  <tbody>
    <% users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td>フォロー数：<%= user.follower.count %></td>
      <td>フォロワー数：<%= user.followed.count %></td>
      <% unless current_user == user %>
        <% if current_user.following?(user) %>
        <td><%= link_to 'フォロー解除', unfollow_path(user), method: :post, class:'btn btn-danger' %></td>
        <% else %>
        <td><%= link_to 'フォローする', follow_path(user), method: :post, class:'btn btn-info' %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
      </table>
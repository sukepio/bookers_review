<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'profile', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class="col-8">
      <h3>ユーザー一覧</h3>
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
            <td>
              <%= link_to user.name, user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
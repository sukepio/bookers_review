<h2>コメント</h2>
  <table class="table">
    <tbody>
      <% book.book_comments.each do |book_comment| %>
      <tr>
        <td><%= book_comment.user.name %></td>
        <td><%= book_comment.comment %></td>
        <% if current_user == book_comment.user %>
        <td><%= link_to '削除する', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class:'btn btn-danger' %></td>
        <% end %>
      </tr>
      <% end %>
      </tbody>
  </table>